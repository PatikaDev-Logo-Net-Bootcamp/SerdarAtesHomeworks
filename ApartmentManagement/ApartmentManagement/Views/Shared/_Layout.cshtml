<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Apartman Yönetim</title>
               <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
        <link href="~/css/styles.css" rel="stylesheet" />
        <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/site.css" />
    </head>
    <body class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <a class="navbar-brand ps-3" asp-action="Index" asp-controller="Home">Apartman Yönetim</a>
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
                <div class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <partial name="_LoginPartial" />
                </div>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <div class="sb-sidenav-menu-heading"></div>
                            <a class="nav-link" asp-action="Index" asp-controller="Home">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Ana Sayfa
                            </a>
                            <div class="sb-sidenav-menu-heading">İşlemler</div>
                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                                <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                                Kullanıcı İşlemleri
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    @if(User.IsInRole("Admin"))
                                {
                                           <a class="nav-link" asp-controller="User" asp-action="AddUser">Kullanıcı Ekle</a>
                                }

                                    <a class="nav-link" asp-controller="User" asp-action="Index">Kullanıcılar</a>
                                    <a class="nav-link" asp-controller="User" asp-action="GetUserPaidBills">Ödenmiş Faturalar</a>
                                    <a class="nav-link" asp-controller="User" asp-action="GetUserNotPaidBills">Ödenmemiş Faturalar</a>
                                </nav>
                            </div>
                                   @if(User.IsInRole("Admin"))
                                {
                                          
                                
                               <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#BlockCollapseAuth" aria-expanded="false" aria-controls="collapseLayouts">
                                <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                                Blok İşlemleri
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="BlockCollapseAuth" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" asp-controller="Block" asp-action="AddBlock">Blok Ekle</a>
                                    <a class="nav-link" asp-controller="Block" asp-action="Index">Bloklar</a>
                                </nav>
                            </div>
                          
                                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#FlatCollapseAuth" aria-expanded="false" aria-controls="collapseLayouts">
                                <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                                Daire İşlemleri
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="FlatCollapseAuth" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" asp-controller="Flat" asp-action="AddFlat">Daire Ekle</a>
                                    <a class="nav-link" asp-controller="Flat" asp-action="Index">Daireler</a>
                                </nav>
                            </div>  
                             <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#BillCollapseAuth" aria-expanded="false" aria-controls="collapseLayouts">
                                <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                                Fatura İşlemleri
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="BillCollapseAuth" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" asp-controller="Bill" asp-action="AddBill">Fatura Ekle</a>
                                    <a class="nav-link" asp-controller="Bill" asp-action="Index">Faturalar</a>
                                    <a class="nav-link" asp-controller="BillType" asp-action="AddBillType">Fatura Türü Ekle</a>
                                    <a class="nav-link" asp-controller="BillType" asp-action="Index">Fatura Türleri</a>
                                </nav>
                            </div>

                            
                        
                        
                        
                        
                        
                        }
                              <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#MessageCollapseAuth" aria-expanded="false" aria-controls="collapseLayouts">
                                <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                                Mesajlar
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="MessageCollapseAuth" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" asp-controller="Messages" asp-action="Index">Mesajlar</a>
                                </nav>
                            </div>




                        </div>
                    </div>
                
                </nav>
            </div>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                     @RenderBody()
                
                     </div>
                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Your Website 2022</div>
                          
                        </div>
                    </div>
                </footer>
            </div>
        </div>
           <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
         @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
