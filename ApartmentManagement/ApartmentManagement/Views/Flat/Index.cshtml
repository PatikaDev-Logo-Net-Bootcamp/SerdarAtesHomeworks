@using ApartmentManagement.Business.DTOs
@model List<FlatDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Daireler</h1>

<p>
    <a asp-action="AddFlat">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label>ID</label>
            </th>
             <th>
                <label>Blok</label>
            </th>
            <th>
            <label>Doluluk</label>
            </th>
             <th>
            <label>Ev Sahibi mi</label>
            </th>
            <th>
              <label>Tip</label>
            </th>
            <th>
               <label>Kat</label>
            </th>
            <th>
                <label>Numara</label>
            </th>
            <th>
                 <label>Ad-Soyad</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlockName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEmpty)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.IsOwner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlatType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Floor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlatNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
     
            <td>
                <a asp-action="UpdateFlat" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="DeleteFlats" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
