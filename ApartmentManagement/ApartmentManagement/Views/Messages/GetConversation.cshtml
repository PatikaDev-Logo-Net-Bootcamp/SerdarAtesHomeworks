@using ApartmentManagement.Domain.Entities
@*@model IEnumerable<ApartmentManagement.Domain.Entities.Message>*@

@model List<Message>


@{
    ViewData["Title"] = "GetConversation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <h2>@Model.FirstOrDefault().ToUser.FirstName İle Mesaj</h2>
     <form asp-action="PostMessage">
<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-md-6">
                <div class="card card-bordered">
                    <div class="card-header">

                    </div>
                    <div class="ps-container ps-theme-default ps-active-y" id="chat-content" style="overflow-y: scroll !important; height:400px !important;">
                 
                        @foreach(var item in Model)
                        {
                            
                                  <div class="media media-chat media-chat-reverse">
                            <div class="media-body">
                                <p>@item.FromUser.FirstName</p>
                                <p>@item.Content</p>
                                <p class="meta"><time datetime="2022">@item.CreatedDate</time></p>
                            </div>
                                </div>
                      <input type="hidden"  asp-for= "@Model.FirstOrDefault().ToUserId"/>
                        }
                        
                    <div class="publisher bt-1 border-light"> <img class="avatar avatar-xs" src="https://img.icons8.com/color/36/000000/administrator-male.png" alt="..."> 
                        <input  class="publisher-input" type="text" placeholder="Write something"  name="content">

                       <input type="submit" value="Gönder" class="btn btn-primary" />
                        
                                <i class="fa fa-smile"></i> <a class="publisher-btn text-info" href="#" data-abc="true">
                                    <i class="fa fa-paper-plane"></i></a> 
                                    </div>

                               @*     <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="Id" />*@
                               
                     
                     
                   
                        <div class="ps-scrollbar-x-rail" style="left: 0px; bottom: 0px;">
                            <div class="ps-scrollbar-x" tabindex="0" style="left: 0px; width: 0px;"></div>
                        </div>
                        <div class="ps-scrollbar-y-rail" style="top: 0px; height: 0px; right: 2px;">
                            <div class="ps-scrollbar-y" tabindex="0" style="top: 0px; height: 2px;"></div>
                        </div>
                    </div>
               
                </div>
            </div>
        </div>
    </div>
</div>
         </form>
                                    
                          