@using ApartmentManagement.Business.DTOs
@model BillUpdateDto

@{
    ViewData["Title"] = "UpdateBill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UpdateBill</h1>

<h4>Bill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateBill">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
             <select asp-for="FlatId" class="form-control"
                asp-items="@(new SelectList(Model.Flat, "Id", "FlatNo",selectedValue:Model.FlatNumber) )">
   
        </select>
            <div class="form-group">
                <label asp-for="BillDate" class="control-label"></label>
                <input asp-for="BillDate" class="form-control" />
                <span asp-validation-for="BillDate" class="text-danger"></span>
            </div>
                  <label asp-for="BillTypeId">Gider Tipi</label>
        <select asp-for="BillTypeId" class="form-control"
                asp-items="@(new SelectList(Model.BillType, "Id", "BillTypeName",selectedValue:Model.BillTypeName))">
    
        </select>
            <input type="hidden" asp-for="Id" />
          
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
