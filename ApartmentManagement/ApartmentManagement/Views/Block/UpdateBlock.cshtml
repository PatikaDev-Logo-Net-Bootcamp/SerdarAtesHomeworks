@model ApartmentManagement.Domain.Entities.Block

@{
    ViewData["Title"] = "UpdateBlock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Blok Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateBlock">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">Blok İsmi</label>
                <input asp-for="BlockName" class="form-control" />
                <span asp-validation-for="BlockName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Kat Sayısı</label>
                <input asp-for="MaxFlat" class="form-control" />
                <span asp-validation-for="MaxFlat" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
         
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
